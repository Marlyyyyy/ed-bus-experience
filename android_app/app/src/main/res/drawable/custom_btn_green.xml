<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00c546" />
            <gradient  android:angle="-90"  android:startColor="#00a117" android:endColor="#a600d631"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0011c5" />
            <solid  android:color="#b50026e0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00c546" />
            <gradient  android:angle="-90"  android:startColor="#7600d631" android:endColor="#b600a117"  />
        </shape>
    </item>
</selector>
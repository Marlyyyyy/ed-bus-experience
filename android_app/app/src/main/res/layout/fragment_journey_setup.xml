<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/journey_root"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:text="Start Stop"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:textColor="@color/monsoon"/>

    <LinearLayout
        android:id="@+id/choose_start_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center"
        android:focusable="true"
        android:background="@drawable/row_blue_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="None"
                android:id="@+id/journey_start_stop"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:textColor="@color/ColorPrimaryText"
                android:gravity="center"
                android:textSize="24sp" />

            <ImageView
                android:src="@drawable/right_arrow_head"
                android:layout_gravity="center"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <View android:background="@color/transparent"
    android:layout_width = "fill_parent"
    android:layout_height="@dimen/journey_setup_row_divider_height" />

    <TextView
        android:text="Service"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:textColor="@color/monsoon"/>

    <LinearLayout
        android:id="@+id/choose_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center"
        android:focusable="true"
        android:background="@drawable/row_blue_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="None"
                android:id="@+id/journey_service"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:textColor="@color/ColorPrimaryText"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp" />

            <ImageView
                android:src="@drawable/right_arrow_head"
                android:layout_gravity="center"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <View android:background="@color/transparent"
        android:layout_width = "fill_parent"
        android:layout_height="@dimen/journey_setup_row_divider_height" />

    <TextView
        android:text="End Stop"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:textColor="@color/monsoon"/>

    <LinearLayout
        android:id="@+id/choose_end_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center"
        android:focusable="true"
        android:background="@drawable/row_blue_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="None"
                android:id="@+id/journey_end_stop"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:layout_weight="6"
                android:textColor="@color/ColorPrimaryText"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp" />

            <ImageView
                android:src="@drawable/right_arrow_head"
                android:layout_gravity="center"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <View android:background="@color/transparent"
        android:layout_width = "fill_parent"
        android:layout_height="@dimen/journey_setup_row_divider_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Auto Sync"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <Switch
            android:id="@+id/auto_sync_switch"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"
            android:gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:layout_gravity="center"
        android:text="Continue >"
        android:id="@+id/journey_setup_complete" />

</LinearLayout>
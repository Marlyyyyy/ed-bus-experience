<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/journey_root"
    android:padding="20dp">

    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip" />

    <TableRow
        android:id="@+id/choose_start_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusable="true"
        android:background="@drawable/row_blue_bg">

        <TextView
            android:text="Start Stop"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <TextView
            android:text="None"
            android:id="@+id/journey_start_stop"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <ImageView
            android:src="@drawable/right_arrow_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
                android:layout_weight="1"/>

    </TableRow>

    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip" />

    <TableRow
        android:id="@+id/choose_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/row_blue_bg">


        <TextView
            android:text="Service"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <TextView
            android:text="None"
            android:id="@+id/journey_service"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <ImageView
            android:src="@drawable/right_arrow_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"/>

    </TableRow>

    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"/>

    <TableRow
        android:id="@+id/choose_end_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/row_blue_bg">

        <TextView
            android:text="End Stop"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <TextView
            android:text="None"
            android:id="@+id/journey_end_stop"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <ImageView
            android:src="@drawable/right_arrow_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"/>

    </TableRow>

    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Auto Sync"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"/>

        <Switch
            android:id="@+id/auto_sync_switch"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="7"
            android:gravity="center_vertical" />
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue >"
        android:id="@+id/journey_setup_complete"
        android:layout_column="0" />

</TableLayout>
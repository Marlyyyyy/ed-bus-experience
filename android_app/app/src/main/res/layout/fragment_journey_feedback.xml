<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/journey_root"
    android:padding="20dp">

    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/row_blue_bg">

        <TextView
            android:text="Seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:width="0px"
            android:layout_weight="7"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="@dimen/switch_min_width"
            android:width="0px"
            android:layout_weight="7"
            android:showText="true"
            android:textOn="Yes"
            android:textOff="No"/>

    </TableRow>

    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:width="0px"
            android:layout_weight="7"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="0px"
            android:layout_weight="7"
            style="?android:attr/ratingBarStyleSmall"/>

    </TableRow>



    <View android:background="#66000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/journey_setup_row_min_height"
        android:paddingLeft="@dimen/journey_setup_row_side_padding"
        android:paddingRight="@dimen/journey_setup_row_side_padding"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/row_blue_bg">

        <TextView
            android:text="Did the driver greet?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:width="0px"
            android:layout_weight="7"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="@dimen/switch_min_width"
            android:width="0px"
            android:layout_weight="7"
            android:showText="true"
            android:textOn="Yes"
            android:textOff="No"/>
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to tracking"
        android:id="@+id/journey_feedback_complete"
        android:layout_column="0" />

</TableLayout>
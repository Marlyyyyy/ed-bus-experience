<TableLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.marton.edibus.activities.JourneyActivity"
    android:id="@+id/journey_root">

    <TableRow>
        <Button
            android:id="@+id/choose_start_stop"
            android:text="Start Stop"
            android:width="200px"
            style="@style/btnStyleOrange"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/choose_service"
            android:text="Service"
            android:width="200px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btnStyleOrange"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/choose_end_stop"
            android:text="End Stop"
            android:width="200px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btnStyleOrange"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Text"
            android:id="@+id/journey_start_stop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1" android:layout_gravity="left|center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="4dip"
            android:textColor="#000000"
            android:layout_span="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Text"
            android:id="@+id/journey_service"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1" android:layout_gravity="left|center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="4dip"
            android:textColor="#000000"
            android:layout_span="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Text"
            android:id="@+id/journey_end_stop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1" android:layout_gravity="left|center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="4dip"
            android:textColor="#000000"
            android:layout_span="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </TableRow>
</TableLayout>
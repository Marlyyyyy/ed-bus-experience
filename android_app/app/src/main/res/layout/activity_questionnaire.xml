<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/journey_setup_row_min_height"
            android:paddingLeft="@dimen/journey_setup_row_side_padding"
            android:paddingRight="@dimen/journey_setup_row_side_padding"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/row_blue_bg">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/ColorPrimaryText">
                <EditText android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:hint="What is your age?" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <View android:background="#fff"
            android:layout_width = "fill_parent"
            android:layout_height="5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_layout"
            android:minHeight="@dimen/journey_setup_row_min_height"
            android:paddingLeft="@dimen/journey_setup_row_side_padding"
            android:paddingRight="@dimen/journey_setup_row_side_padding"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/row_blue_bg">

            <TextView
                android:text="What is your gender?"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="2.2"/>

            <TextView
                android:text="Female"
                android:id="@+id/gender_text"
                android:gravity="right"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="2.2"/>

        </LinearLayout>

        <View android:background="#fff"
            android:layout_width = "fill_parent"
            android:layout_height="5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/concession_card_switch_layout"
            android:minHeight="@dimen/journey_setup_row_min_height"
            android:paddingLeft="@dimen/journey_setup_row_side_padding"
            android:paddingRight="@dimen/journey_setup_row_side_padding"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/row_blue_bg">

            <TextView
                android:text="Hold a concession card?"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="2.2"/>

            <TextView
                android:text="No"
                android:id="@+id/concession_card_switch_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textColor="@color/oil"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

            <Switch
                android:id="@+id/concession_card_switch"
                android:checked="false"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:switchMinWidth="@dimen/switch_min_width"
                android:layout_weight="1"/>
        </LinearLayout>

        <View android:background="#fff"
            android:layout_width = "fill_parent"
            android:layout_height="5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/travel_reason_layout"
            android:minHeight="@dimen/journey_setup_row_min_height"
            android:paddingLeft="@dimen/journey_setup_row_side_padding"
            android:paddingRight="@dimen/journey_setup_row_side_padding"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/row_blue_bg">

            <TextView
                android:text="Why do you normally take the bus?"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="2.2"/>

            <TextView
                android:text="Work"
                android:id="@+id/travel_reason_text"
                android:gravity="right"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="2.2"/>

        </LinearLayout>

        <View android:background="#fff"
            android:layout_width = "fill_parent"
            android:layout_height="5dip" />

        <LinearLayout
            android:layout_height="0px"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom|center"
            android:minHeight="@dimen/stop_dialog_row_min_height">

            <TextView
                android:text="Never ask again"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/never_ask_again"
                android:checked="false"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:switchMinWidth="@dimen/switch_min_width"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="0px"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom|center"
            android:minHeight="@dimen/stop_dialog_row_min_height">

            <Button
                android:text="Cancel"
                style="@style/AppTheme"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/base"
                android:id="@+id/cancel"/>

            <Button
                android:text="Save"
                style="@style/AppTheme"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/ColorPrimary"
                android:id="@+id/save"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>